{
  "name": "@kami-ui/root",
  "version": "2.0.0",
  "private": true,
  "description": "",
  "license": "MIT",
  "author": {
    "name": "Gobind Singh | Hymns Of Web",
    "email": "thesinghgobind@gmail.com",
    "url": "https://github.com/theGobindSingh"
  },
  "type": "module",
  "workspaces": [
    "common-packages/*",
    "packages/*",
    "storybook",
    "react-components/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "rimraf .next .turbo node_modules dist **/*/dist **/*/.next **/*/.turbo **/*/node_modules pnpm-lock.yaml",
    "commit": "git-cz",
    "create:rc": "tsx ./scripts/new-component/index.ts",
    "dev": "tsx ./scripts/dev/index.ts",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky && tsx ./scripts/prepare/index.ts",
    "story": "pnpm --filter @kami-ui/storybook dev"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "resolutions": {
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "eslint": "^9.27.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@commitlint/prompt-cli": "^20.1.0",
    "@inquirer/prompts": "^7.6.0",
    "@types/node": "^24.6.2",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "chalk": "^5.6.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "node-watch": "^0.7.4",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rimraf": "6.0.1",
    "rollup": "^4.52.3",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=3"
  },
  "overrides": {
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "eslint": "^9.27.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "rimraf": "6.0.1",
    "typescript": "5.9.3"
  }
}
