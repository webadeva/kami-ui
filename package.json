{
  "name": "@kami-ui/root",
  "version": "2.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "author": "Gobind Singh | Hymns Of Web",
  "license": "ISC",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky",
    "commit": "git-cz",
    "create:rc": "tsx react-components/scripts/new-component/index.ts",
    "clean": "rimraf .next .turbo node_modules dist **/*/dist **/*/.next **/*/.turbo **/*/node_modules pnpm-lock.yaml",
    "story": "pnpm --filter @kami-ui/storybook dev"
  },
  "dependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@commitlint/prompt-cli": "^19.7.1",
    "@types/node": "^22.13.9",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "chalk": "^5.4.1",
    "commitizen": "^4.3.1",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "inquirer": "^9.0.0",
    "node-watch": "^0.7.4",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.9",
    "tsx": "^4.19.4",
    "turbo": "^2.4.4",
    "typescript": "5.8.3"
  },
  "resolutions": {
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "typescript": "5.8.3"
  },
  "overrides": {
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.6.1",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
