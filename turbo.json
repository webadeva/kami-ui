{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*"],
  "concurrency": "100%",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "storybook-static/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "@kami-ui/next-theme#build": {
      "dependsOn": ["@kami-ui/react-theme-common#build"]
    },
    "@kami-ui/react-theme#build": {
      "dependsOn": ["@kami-ui/react-theme-common#build"]
    },
    "@kami-ui/theme-shop#build": {
      "dependsOn": ["@kami-ui/react-theme-common#build"]
    },
    "@kami-ui/storybook#build": {
      "dependsOn": ["@kami-ui/next-theme#build"]
    }
  }
}
